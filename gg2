#!/bin/bash

# Update the system
echo "Updating system..."
sudo apt update -y

# Install npm
echo "Installing npm..."
sudo apt install npm -y

# Install git
echo "Installing git..."
sudo apt install git -y

# Initialize a git repository
echo "Initializing git repository..."
git init

# Clone the specified repository
REPO_URL="https://github.com/your-username/your-repository.git"  # Replace with your repo URL
echo "Cloning repository: $REPO_URL..."
git clone $REPO_URL

echo "Setup complete!"
