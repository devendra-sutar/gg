variables:
  TF_ROOT: ${CI_PROJECT_DIR}
  TF_ADDRESS: ${CI_API_V4_URL}/projects/${CI_PROJECT_ID}/terraform/state/ankita
  #SERVER_PASS: linux
  #VUE_APP_KEYCLOAK_RELM
  VUE_APP_KEYCLOAK_RELM: "dev-relm"  # You can set this to whatever value you want or use dynamic values
  VUE_APP_KEYCLOAK_CLIENT: "dev-client"
cache:
  key: dev
  paths:
    - ${TF_ROOT}/.terraform


before_script:
  # - echo "VUE_APP_KEYCLOAK_RELM: ${VUE_APP_KEYCLOAK_RELM}"
  # - echo "VUE_APP_KEYCLOAK_CLIENT: ${VUE_APP_KEYCLOAK_CLIENT}"
  - cd ${TF_ROOT}
  
  - terraform init -reconfigure
# - sudo terraform workspace list

stages:
- validate
- plan
- apply
# - destroy

validate:
  stage: validate
  script:
    # - terraform version
    
    - terraform init -reconfigure  
    - terraform validate
  # when: manual
  tags:
    - shell
  when: manual

plan:
  stage: plan
  script: 
    - terraform plan -lock=false -out="planfile" 
    
    
  when: manual
  dependencies:
    - validate
  tags:
    - shell
  
  artifacts:
    name: plan
    paths:
      - planfile
    reports:
      terraform: planfile

  # when: manual

apply:
  stage: apply
  script:
    - terraform apply -lock=false "planfile"  
    - terraform output -raw ip1>${TF_ROOT}/ip1.txt 
    - terraform output -raw ip2>${TF_ROOT}/ip2.txt 
    # - terraform output -raw ip3>${TF_ROOT}/ip3.txt 
    # - terraform output -raw ip4>${TF_ROOT}/ip4.txt 
    
  dependencies:
    - plan
  tags:
    - shell
  when: manual

  artifacts:
     name: apply
     paths:
      - ${TF_ROOT}/ip1.txt
      - ${TF_ROOT}/ip2.txt
      # - ${TF_ROOT}/ip3.txt
      # - ${TF_ROOT}/ip4.txt
    # reports:
    #   terraform:
    #     - ${TF_ROOT}/ip1.txt
    #     - ${TF_ROOT}/ip2.txt
    #     - ${TF_ROOT}/ip3.txt
    #     - ${TF_ROOT}/ip4.txt




  

       



