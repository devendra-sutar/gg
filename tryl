[Unit]
Description=Alloy Service - Vendor-agnostic OpenTelemetry Collector distribution
Documentation=https://github.com/open-telemetry/opentelemetry-collector
After=network.target

[Service]
Type=simple
ExecStart=/path/to/alloy-binary --config /path/to/config.yaml
Restart=on-failure
RestartSec=5
Environment=OTEL_LOG_LEVEL=info

[Install]
WantedBy=multi-user.target
